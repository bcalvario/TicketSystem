@model TicketSystem.Models.Ticket

@{
    ViewData["Title"] = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalle del ticket @Html.DisplayFor(model => model.Titulo)</h1>

<hr />

<div class="row">

    <div class="row">

        <div class="col-4">
            @Html.DisplayFor(model => model.EncargadoNombre) @Html.DisplayFor(model => model.EncargadoApellido1) @Html.DisplayFor(model => model.EncargadoApellido2)
        </div>

        <div class="col-8">
            @Html.DisplayFor(model => model.Estatus)
        </div>

    </div>

    <br />

    <div class="row">
        
        <div class="col-4">
            @Html.DisplayFor(model => model.EncargadoCorreo)
        </div>

        <div class="col-8">    
            @Html.DisplayFor(model => model.Descripcion)
        </div>

    </div>

</div>

<br />

<div>

    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> 
    <a class="btn btn-outline-dark" asp-action="Index">Regresar</a>
        
</div>
