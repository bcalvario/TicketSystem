@model IEnumerable<TicketSystem.Models.Ticket>

@{
    ViewData["Title"] = "Tickets (abierto)";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1>Tickets</h1>
        </div>
        <div class="col">
            <form method="post" enctype="multipart/form-data">
                <label >Archivo</label>
                <input id="Excel" type="file"/>
                <button class="btn btn-outline-dark" asp-action="ImportTicketsFromHTML" type="submit" value="Enviar">Enviar</button>
            </form>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand-lg bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" asp-action="Create">Crear nuevo ticket</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Estatus
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="Index">TODOS</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-action="Open">ABIERTO</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-action="InProgress">EN PROGRESO</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-action="Done">RESUELTO</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><a class="dropdown-item" asp-action="Back">NECESITA REEMBOLSO</a></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                Encargado
            </th>
            <th>
                Correo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estatus)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr class="table-secondary">
            <td>
                #@Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EncargadoNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EncargadoCorreo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estatus)
            </td>
            <td>
                <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a> 
                <a class="btn btn-outline-dark" asp-action="Details" asp-route-id="@item.Id">Detalles</a> 
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>